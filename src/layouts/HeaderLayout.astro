---
import '../styles/global.css'
const desktopMenuClasses = "fixed top-4 left-1/2 transform -translate-x-1/2 z-50 bg-white/90 py-3 px-10 hidden md:inline-flex space-x-10 justify-center font-bold uppercase tracking-wide text-gray-600 shadow-lg rounded-full backdrop-blur-md transition-all duration-300 hover:shadow-pink-500/20";


const linkClasses = "hover:text-pink-600 transition-colors duration-200";
---

<nav class={desktopMenuClasses}>
    <a href="/" class={linkClasses}>Home</a>
    <a href="/works" class={linkClasses}>Projects</a>
    <a href="/services" class={linkClasses}>Services & Tech</a>
    <a href="/contact" class={linkClasses}>Contact</a>
</nav>

<button id="menu-btn" class="fixed top-4 right-4 z-50 p-3 bg-white/90 rounded-full shadow-lg md:hidden text-gray-600 hover:text-pink-600 transition-colors" aria-label="Menu">
    <svg id="icon-open" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
    </svg>
    <svg id="icon-close" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 hidden">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
    </svg>
</button>

<div id="mobile-menu" class="fixed inset-0 z-40 bg-slate-900/95 backdrop-blur-xl transform translate-x-full transition-transform duration-300 ease-in-out md:hidden flex flex-col justify-center items-center space-y-8">
    
    <a href="/" class="text-2xl font-bold text-white hover:text-pink-400 tracking-wider uppercase mobile-link">Home</a>
    <a href="/works" class="text-2xl font-bold text-white hover:text-pink-400 tracking-wider uppercase mobile-link">Projects</a>
    <a href="/services" class="text-2xl font-bold text-white hover:text-pink-400 tracking-wider uppercase mobile-link">Services & Tech</a>
    <a href="/contact" class="text-2xl font-bold text-white hover:text-pink-400 tracking-wider uppercase mobile-link">Contact</a>

</div>

<script>
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const iconOpen = document.getElementById('icon-open');
    const iconClose = document.getElementById('icon-close');
    const mobileLinks = document.querySelectorAll('.mobile-link');

    if (menuBtn && mobileMenu && iconOpen && iconClose) {
        menuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('translate-x-full');
            
            iconOpen.classList.toggle('hidden');
            iconClose.classList.toggle('hidden');
        });

        mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('translate-x-full');
                iconOpen.classList.remove('hidden');
                iconClose.classList.add('hidden');
            });
        });
    }
</script>