---
import Layout from '../layouts/layout.astro';
import TitlePage from "../components/TitlePage.astro";

const styleInput = `
  w-full border border-white/20 px-4 py-3 rounded-lg 
  bg-slate-800/50 
  backdrop-blur-lg 
  text-white
  placeholder-gray-400
  focus:outline-none focus:ring-2 focus:ring-pink-400
  transition-all
`;
const styleTextArea = `
  w-full border border-white/20 px-4 py-3 rounded-lg 
  bg-slate-800/50 
  backdrop-blur-lg 
  text-white
  placeholder-gray-400
  md:col-span-3
  focus:outline-none focus:ring-2 focus:ring-pink-400
  transition-all
`;
---
<Layout title="Contacto">

  <section class="py-20 px-4 md:px-8 pt-24 pb-36">
    <div class="max-w-6xl mx-auto">
      <TitlePage title="Contact Me" subtitle="Get in touch with me"/>
    </div>

    <div class="mt-16 relative max-w-4xl mx-auto group">

      <div class="absolute -inset-1 bg-gradient-to-r from-pink-600 via-purple-600 to-blue-600 rounded-2xl blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"></div>
      <div class="relative z-20 rounded-2xl shadow-2xl p-8 md:p-12 
        bg-slate-900/80 backdrop-blur-xl border border-white/10">
        <form 
          action="https://formspree.io/f/xpwkznwa" 
          method="POST"
        >
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6"> 
            
            <div>
              <label for="name" class="block text-sm font-medium text-pink-300 mb-2">Name</label>
              <input type="text" name="name" id="name" placeholder="Your Name" class={styleInput} required />
            </div>


            <div>
              <label for="email" class="block text-sm font-medium text-blue-300 mb-2">Email</label>
              <input type="email" name="email" id="email" placeholder="your@correo.com" class={styleInput} required />
            </div>


            <div>
              <label for="subject" class="block text-sm font-medium text-purple-300 mb-2">Subject</label>
              <input type="text" name="subject" id="subject" placeholder="subject" class={styleInput} />
            </div>

            <div class="md:col-span-3">
              <label for="message" class="block text-sm font-medium text-pink-300 mb-2">Message</label>
              <textarea name="message" id="message" rows="5" placeholder="Your Message..." class={styleTextArea} required></textarea>
            </div>
          </div>

          <div class="text-center">
            <button 
              type="submit" 
              class="relative inline-flex items-center justify-center px-10 py-3 overflow-hidden font-medium text-pink-300 transition duration-300 ease-out border-2 border-pink-500 rounded-lg shadow-md group w-full md:w-auto hover:-translate-y-1 hover:shadow-xl hover:shadow-pink-500/30"
            >
              <span class="absolute inset-0 w-full h-full transition-all duration-300 ease-out-quad bg-white/10 group-hover:bg-pink-500/20"></span>
              <span class="absolute bottom-0 left-0 w-full h-full transition-all duration-500 ease-out-quad opacity-0 group-hover:opacity-100 -translate-x-full group-hover:translate-x-0">
                <span class="block w-full h-full bg-gradient-to-r from-pink-500 to-purple-500"></span>
              </span>
            
              <span class="relative z-10 text-lg group-hover:text-white transition-colors duration-200">
                Send Message
              </span>
            </button>
          </div>

        </form>
      </div>
    </div>
  </section>

</Layout>