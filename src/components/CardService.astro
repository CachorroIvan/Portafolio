---
export interface Props {
  title: string;
  desc: string;
}
const { title, desc } = Astro.props;

---
<div class="relative group h-full">
  
  <div class="absolute 
  -inset-1 bg-gradient-to-r
 from-blue-600 to-purple-600 
  rounded-lg blur opacity-20 group-hover:opacity-75 
  transition duration-1000 group-hover:duration-200"></div>

  <div class="relative z-20 h-full rounded-lg shadow-2xl p-8 
    bg-slate-900/80 
    backdrop-blur-xl 
    border border-white/10
    flex flex-col justify-center text-center">
    
    <h2 class="pt-3 font-bold text-2xl mb-4 text-transparent 
    bg-clip-text bg-gradient-to-r from-pink-300 to-blue-300"> {title}</h2>
    
    <div class="text-gray-300 text-sm leading-relaxed" set:html={desc} />
    
  </div>
</div>

