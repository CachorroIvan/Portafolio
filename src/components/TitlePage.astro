---
import '../styles/global.css'
export interface props {
    title: string;
    subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="relative group max-w-xl mx-auto">
    <div class="absolute -inset-1 bg-gradient-to-r from-pink-600 via-purple-600 to-blue-600 rounded-lg blur opacity-25 group-hover:opacity-75 transition duration-1000 group-hover:duration-200"></div>
    <div class="relative text-center p-8 rounded-lg shadow-2xl
                bg-slate-900/80 backdrop-blur-xl border border-white/10"> 
        <h1 class="text-5xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-300 via-pink-300 to-purple-300 pb-2">
            {title}
        </h1>
        <p class="pt-2 text-gray-300 text-lg tracking-wide">{subtitle}</p>
    </div>

</div>